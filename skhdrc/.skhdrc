# app shortcuts 
hyper - a: ( yabai -m query --windows | jq -er 'map(select(.app == "Alacritty"))[0].space' ) | xargs -I{} yabai -m space --focus {}
hyper - c: ( yabai -m query --windows | jq -er 'map(select(.app == "Google Chrome"))[0].space' ) | xargs -I{} yabai -m space --focus {}
hyper - e: ( yabai -m query --windows | jq -er 'map(select(.app == "Element"))[0].space' ) | xargs -I{} yabai -m space --focus {}
hyper - y: ( yabai -m query --windows | jq -er 'map(select(.app == "YouTube"))[0].space' ) | xargs -I{} yabai -m space --focus {}


# focus window
hyper - h : yabai -m window --focus west  || yabai -m display --focus west
hyper - j : yabai -m window --focus south || yabai -m display --focus south
hyper - k : yabai -m window --focus north || yabai -m display --focus north
hyper - l : yabai -m window --focus east|| yabai -m display --focus east

hyper - n : cur_window=$(yabai_cur_window_id) && \
            yabai_is_zoomed && yabai -m window --display $(yabai_next_display) --focus ${cur_window} --toggle zoom-fullscreen || yabai -m window --display $(yabai_next_display) --focus ${cur_window}
hyper - p : cur_window=$(yabai_cur_window_id) && \
            yabai_is_zoomed && yabai -m window --display $(yabai_prev_display) --focus ${cur_window} --toggle zoom-fullscreen || yabai -m window --display $(yabai_next_display) --focus ${cur_window}

# toggle window zoom
# alt - d : yabai -m window --toggle zoom-parent
hyper - m : yabai -m window --toggle zoom-fullscreen

